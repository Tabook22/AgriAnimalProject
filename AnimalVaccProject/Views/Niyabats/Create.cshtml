@model AnimalVaccProject.Models.tbl_Niyabat

@{
    ViewBag.Title = "Create";
}

<h2>إضافة نيابة</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.NName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NName, "", new { @class = "text-danger" })
            </div>
            <lable class="control-label col-md-2">
                إسم النيابة:
            </lable>
        </div>

        <div class="form-group">

            <div class="col-md-10">
                @Html.DropDownList("WID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.WID, "", new { @class = "text-danger" })
            </div>
            <lable class="control-label col-md-2">
                إسم الولاية:
            </lable>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="إضافة" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("عودة للقائمة", "Index")
</div>
