@model AnimalVaccProject.Models.DiseaseType

@{
    ViewBag.Title = "إضافة المجموعات الرئيسية لأمراض الحيوان";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>تعديل المجموعات الرئيسية لأمراض الحيوان</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h4>DiseaseType</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
    
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DType, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DType, "", new { @class = "text-danger" })
                </div>
                <label class="control-label col-md-2">إسم المجموعة</label>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="حفظ" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    
    <div>
        @Html.ActionLink("عودة للقائمة", "Index")
    </div>
</body>
</html>
