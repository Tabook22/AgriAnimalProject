@model AnimalVaccProject.Models.tbl_Disease

@{
    ViewBag.Title = "Edit";
}

<h2>تعديل بيانات الإمراض</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.DisId)

        <div class="form-group">
           
            <div class="col-md-10">
                @Html.EditorFor(model => model.DiseaseType, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DiseaseType, "", new { @class = "text-danger" })
            </div>
            <label class="control-label col-md-2">نوع المرض</label>
            </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.DropDownList("dtype", null, "الرجاء إختر المجموعة ...", htmlAttributes: new { @class = "form-control" })
            </div>
            @Html.LabelFor(model => model.dtype, htmlAttributes: new { @class = "control-label col-md-2" })
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.DropDownList("catId", null, "الرجاء إختر الخدمة ...", htmlAttributes: new { @class = "form-control" })

                @*@Html.EditorFor(model => model.Category, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DiseaseType, "", new { @class = "text-danger" })*@
            </div>
            @Html.LabelFor(model => model.catId, htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="حفظ" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("عودة للقائمة", "Index")
</div>
