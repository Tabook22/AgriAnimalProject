@model AnimalVaccProject.Models.tbl_Disease

@{
    ViewBag.Title = "Edit";
}

<h2>تعديل بيانات الإمراض</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.DisId)

        <div class="form-group">
           
            <div class="col-md-10">
                @Html.EditorFor(model => model.DiseaseType, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DiseaseType, "", new { @class = "text-danger" })
            </div>
            <label class="control-label col-md-2">نوع المرض</label>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.DropDownList("catId", null, htmlAttributes: new { @class = "form-control" })
                </div>
              <label class="control-label col-md-2">نوع العلاج</label>
            </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="حفظ" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("عودة للقائمة", "Index")
</div>
