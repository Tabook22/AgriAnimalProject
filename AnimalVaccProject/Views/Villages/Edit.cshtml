@model AnimalVaccProject.Models.tbl_Village

@{
    ViewBag.Title = "Edit";
}

<h2>تعديل</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.VID)

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.VName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.VName, "", new { @class = "text-danger" })
            </div>
            <lable class="control-label col-md-2">
                إسم القرية:
            </lable>
        </div>

        <div class="form-group">
        
            <div class="col-md-10">
                @Html.DropDownList("NID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NID, "", new { @class = "text-danger" })
            </div>
            <lable class="control-label col-md-2">
                إسم النيابة:
            </lable>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="حفظ" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("عودة للقائمة", "Index")
</div>
